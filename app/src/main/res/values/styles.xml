<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="AppTheme">
        <item name="android:windowBackground">@drawable/loading_screen</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@color/bottomNavigationFocusedTint</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

</resources>